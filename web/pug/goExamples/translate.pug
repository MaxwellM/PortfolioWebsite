meta(name='description', content="Golang String Translation")
meta(name='keywords', content="HTML,CSS,JavaScript,AngularJS,Go")
meta(name='author', content="Maxwell Morin")
meta(charset="UTF-8")
div#goExampleTranslatePageWrapper
    div#goExampleTranslateTitle
        h1 Translate
            img(src='../images/golang.png', alt='')
    div#goExampleTranslateInputWrapper
        h3 Enter a string to translate to French!
        div#goExampleTranslateInnerWrapper
            form(ng-submit='translate(string, lg)')
                input#goExampleTranslateInput(type='text', ng-model='string')
                select#goExampleTranslateSelect(ng-model='lg', ng-options='lang.code as lang.Name for lang in languages')
    div#goExampleTranslateReturnWrapper
        label Translation:
        label(ng-bind-html="translation")
